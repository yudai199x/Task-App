<% provide(:title, @user.name) %>
<h1>タスク詳細</h1>

<%= form_with(model: @task, url: update_cpl_user_task_path(@user, @task), local: true) do |f| %>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <p class="h3"><%= @task.name %></p>
      <table class="table table-hover" id="table-tasks">
        <tbody>
          <tr>
            <th>タスク</th>
            <th>未完了/完了</th>
          </tr>
          
          <% @mini_tasks.each do |mini_task| %>
            <%= f.fields_for "mini_tasks[]", mini_task do |q| %>
              <tr>
                <td><%= mini_task.dtl %></td>
                <td><%= q.check_box :cpl_chk %></td>
              </tr>                        
            <% end %>
          <% end %>

        </tbody>
      </table>
      <%= f.submit "更新", class: "btn btn-primary btn-form" %>
      <%= link_to "キャンセル", user_tasks_path(@user), class: "btn btn-default btn-form" %>
    </div>    
  </div>
<% end %>
<% provide(:title, resource.name) %>
<h1>ユーザー情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      
      <%= f.label :name, class: "label-form" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :email, class: "label-form" %>
      <%= f.email_field :email, class: "form-control" %>
      
      <%= f.label :password, class: "label-form" %>
      <%= f.password_field :password, class: "form-control" %>
      
      <%= f.label :password_confirmation, class: "label-form" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      
      <%= f.label :current_password, class: "label-form" %>
      <%= f.password_field :current_password, class: "form-control" %>
      
      <%= f.submit "更新", class: "btn btn-primary btn-block btn-form" %>
    <% end %>
  </div>
</div>
